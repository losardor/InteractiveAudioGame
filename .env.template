# Soundmaze Production Environment
# Copy this to .env and fill in real values

# REQUIRED - generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_generate_a_real_key

# Postgres credentials
POSTGRES_USER=soundmaze
POSTGRES_PASSWORD=CHANGE_ME_use_a_strong_password
POSTGRES_DB=soundmaze

# Admin account (created on first run)
ADMIN_EMAIL=your-email@example.com
ADMIN_PASSWORD=CHANGE_ME_pick_a_strong_password

# Mail (optional for PoC - leave defaults to skip)
MAIL_SERVER=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
